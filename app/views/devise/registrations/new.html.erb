<br>
<div class="container-fluid">
<div class="row-fluid">
  <div class="span8">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <legend><strong><b><center><font color="#000000" face="French Script MT" size="7">Sign Up</font></center></b></strong></legend>
          <%= f.input :first_name, input_html: { class: 'input-xlarge' }, placeholder: 'Your First Name' %>
          <%= f.input :last_name, input_html: { class: 'input-xlarge' }, placeholder: 'Your Last Name' %>
          <%= f.input :profile_name, input_html: { class: 'input-xlarge' }, placeholder: 'A nickname for you' %>
          <%= f.input :email, input_html: { class: 'input-xlarge' }, placeholder: 'Your Email address' %>
          <%= f.input :password, input_html: { class: 'input-xlarge' }, placeholder: 'Password (Minimum 8 characters)' %>
          <%= f.input :password_confirmation, input_html: { class: 'input-xlarge' }, placeholder: 'Re-type Password' %>

          <div><center><%= f.button :submit, "Sign Up", class: 'btn btn-success btn-large' %></center></div>
        </fieldset>
    <% end %>
      
    <center>
      <br><br><br>
      <h4>Already have an Account?</h4>
      <%= render "devise/shared/links" %>
    </center>
      <br><br><br>
    </div>

    <div class="span4"><font color="#000000" face="French Script MT" size="7">
      <br>
       <h1>Signing up is:</h1>
       <h1>- Free</h1>
       <h1>- Easy</h1>
       <h1>- Secure</h1>
    </font></div>

  </div>
</div>

