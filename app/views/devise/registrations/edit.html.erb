<%= page_header do %>
  <h2><font face="Harrington">Edit My Profile</font></h2>
<% end %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'form-horizontal '}) do |f| %>
  <%= devise_error_messages! %>

<fieldset>
  <legend>About Me</legend>
  <%= f.input :first_name, input_html: { class: 'input-xxlarge' }, placeholder: 'First Name' %>
  <%= f.input :last_name, input_html: { class: 'input-xxlarge' }, placeholder: 'Last Name' %>
  <%= f.input :email, input_html: { class: 'input-xxlarge' }, placeholder: 'Your email id' %>
  <%= f.input :from, input_html: { class: 'input-xxlarge' }, placeholder: 'Born in' %>
  <%= f.input :lives_in, input_html: { class: 'input-xxlarge' }, placeholder: 'Presently Living in' %>
  <%= f.input :marital_status, input_html: { class: 'input-xxlarge' }, placeholder: 'Married / Unmarried / In a Relationship with _________' %>
  <%= f.input :occupation, input_html: { class: 'input-xxlarge' }, placeholder: 'Working status' %>
  <%= f.input :college, input_html: { class: 'input-xxlarge' }, placeholder: 'College / Institute / University' %>
  <%= f.input :school, input_html: { class: 'input-xxlarge' }, placeholder: 'School / High School' %>
  <%= f.input :about_yourself, input_html: { class: 'input-xxlarge' }, placeholder: 'One Line Description About You & Your Personality' %>
</fieldset>

<fieldset>
  <legend>Profile Picture</legend>
  <%= f.input :Image, as: :file %>
  <%= bootstrap_paperclip_picture f, :avatar %>
</fieldset>

<fieldset>
  <legend>Update Password</legend>
  <%= f.input :password, hint: "Leave blank if you don't want to change it", input_html: { class: 'input-xxlarge', autocomplete: 'off' }, placeholder: 'New Password' %>
  <%= f.input :password_confirmation, input_html: { class: 'input-xxlarge', autocomplete: 'off' }, placeholder: 'Confirm New Password' %>
</fieldset>

<fieldset>
  <legend>Confirm Changes</legend>
  <%= f.input :current_password, hint: "For security reasons, we need your current password to confirm your changes!", input_html: { class: 'input-xxlarge', autocomplete: 'off' }, placeholder: 'Old Password' %>
</fieldset>

  <div class="form-actions">
  <%= f.submit "Update", class: 'btn btn-primary' %>
  <%= link_to "Back", root_path, class: 'btn' %>
  <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'btn btn-danger pull-right' %> 
  </div>
<% end %>