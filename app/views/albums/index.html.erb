<%= page_header do %>
<h1><font face="Harrington">Listing Albums</font> <%= link_to 'New Album', new_album_path, class: 'btn btn-success pull-right' %></h1>
<% end %>

<ul class="thumbnails">
<% @albums.each do |album| %>
  <li class="span12">
    <div class="thumbnail">
    <h3><%= link_to album_thumbnail(album), album_pictures_path(album) %>
    <%= album.title %></h3><br>
    <%= link_to "View Album", album_pictures_path(@user, album) %>
    <% if can_edit_album?(album) %>
      | <%= link_to "Edit", edit_album_path(album) %>
      | <%= link_to "Delete", album_path(album), method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    </div>
  </li>
<% end %>
</ul>
